@model ConfigViewModel
@{
    ViewData["Title"] = "Config View";
    

}

<div class="container-fluid">
    <h1 class="display-4">Config</h1>

    <div class="accordion" id="accordionJson">
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    JSON Config
                </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <pre>@Model.JsonConfig</pre>
                </div>
            </div>
        </div>
    </div>

    <div id="tree"></div>
    <script>
    $(document).ready(function() {
        let tree = new BS5JsonTreeView('tree');
        tree.loadUrl('@Url.Action("GetConfig", "Home")');
        tree.collapseAll();
    });
    </script>

